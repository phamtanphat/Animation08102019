<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/imageviewAlpha"
       android:src="@drawable/ic_alpha"
       android:layout_width="50dp"
       android:layout_height="50dp"/>
   <ImageView
       android:layout_marginTop="-35dp"
       android:id="@+id/imageviewScale2"
       android:layout_centerHorizontal="true"
       android:scaleType="centerInside"
       android:src="@drawable/hinhicongrab2"
       android:layout_below="@id/imageviewScale1"
       android:layout_width="100dp"
       android:layout_height="100dp"/>
   <ImageView
       android:id="@+id/imageviewScale1"
       android:layout_centerInParent="true"
       android:scaleType="centerInside"
       android:src="@drawable/hinhicongrab1"
       android:layout_width="200dp"
       android:layout_height="200dp"/>

</RelativeLayout>